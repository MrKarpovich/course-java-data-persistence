        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.ProgrammerEntity"/>

        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.enemy.dal.entity.BaseEntity"/>
