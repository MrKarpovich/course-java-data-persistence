        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tpc.ProgrammerEntity"/>

        <!-- Table Per Hierarchy Class -->
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.BaseEntity"/>
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.EmployeeEntity"/>
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.ManagerEntity"/>
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.ProgrammerEntity"/>

        <!-- Table Per Subclass -->
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.BaseEntity"/>
        <mapping class="com.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.EmployeeEntity"/>
